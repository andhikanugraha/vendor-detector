    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceRoot}/dist/server.js",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/dist/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "program": "${workspaceRoot}/dist/test.js",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/dist/**/*.js"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "sourceMaps": true
        }
    ]
}